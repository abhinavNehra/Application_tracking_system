{
  "compilerOptions": {
    //"outDir": "dist",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowJs": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "moduleResolution": "bundler"
  },
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["./src", "./src/*", "./src/**/*", "."],
  "exclude": ["node_modules"]
}
